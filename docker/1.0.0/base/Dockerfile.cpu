FROM ubuntu:16.04

ARG py_version

# Validate that arguments are specified
RUN test $py_version || exit 1

# Install python and nginx
RUN apt-get update && \
    apt-get -y install \
        build-essential \
        curl \
        git \
        jq \
        nginx \
        python-dev \
        python3-dev \
        wget && \
    if [ $py_version -eq 3 ]; then rm /usr/bin/python && ln -s /usr/bin/python3 /usr/bin/python; fi

# Install pip
RUN cd /tmp && \
    curl -O https://bootstrap.pypa.io/get-pip.py && \
    python get-pip.py && rm get-pip.py

# Python wonâ€™t try to write .pyc or .pyo files on the import of source modules
# Force stdin, stdout and stderr to be totally unbuffered. Good for logging
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1

# Install dependencies from pip
# FIXME: temporarily installing torch_nightly (update to official PT1 when it released)
RUN if [ $py_version -eq 2 ]; \
    then pip install --no-cache --upgrade-strategy only-if-needed https://download.pytorch.org/whl/nightly/cpu/torch_nightly-2018.9.12-cp27-cp27mu-linux_x86_64.whl; \
    else pip install --no-cache --upgrade-strategy only-if-needed https://download.pytorch.org/whl/nightly/cpu/torch_nightly-2018.9.12-cp35-cp35m-linux_x86_64.whl; fi
RUN pip install --no-cache --upgrade-strategy only-if-needed numpy Pillow six retrying && \
    pip install --no-cache --no-deps torchvision
